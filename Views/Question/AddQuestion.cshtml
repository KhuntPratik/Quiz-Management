@{
}

@model AddQuestionModel;


<main id="main" class="main">
<div class="container mt-5">
    <h4 class="mb-3">Add Question</h4>

    <div class="card p-4 shadow-sm">
        <form>
            <!-- Question -->
            <div class="mb-3">
                <label for="questionText" class="form-label fw-bold">Question <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="questionText" rows="3" placeholder="Enter Question" asp-for="QuestionText"></textarea>
                    <span class="text-danger" asp-validation-for="QuestionText"></span>
            </div>

            <!-- Question Level -->
            <div class="mb-3">
                <label for="questionLevel" class="form-label fw-bold">Question Level <span class="text-danger">*</span></label>
                    <select class="form-select" id="questionLevel" asp-for="QuestionLevelID">
                    <option selected disabled>Select Level</option>
                    <option>Easy</option>
                    <option>Moderate</option>
                    <option>Hard</option>
                </select>
                    <span class="text-danger" asp-validation-for="QuestionLevelID"></span>
            </div>

            <!-- Answer Options -->
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option A <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option A" asp-for="OptionA">
                        <span class="text-danger" asp-validation-for="OptionA"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option B <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option B" asp-for="OptionB">
                        <span class="text-danger" asp-validation-for="OptionB"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option C <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option C" asp-for="OptionC">
                        <span class="text-danger" asp-validation-for="OptionC"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option D <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option D" asp-for="OptionD">
                        <span class="text-danger" asp-validation-for="OptionD"></span>
                </div>
            </div>

            <!-- Correct Option -->
            <div class="mt-3">
                <label for="correctOption" class="form-label fw-bold">Correct Option <span class="text-danger">*</span></label>
                    <select class="form-select" id="correctOption" asp-for="CorrectOption">
                    <option selected disabled>Select Correct Option</option>
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                </select>
                    <span class="text-danger" asp-validation-for="CorrectOption"></span>
            </div>

            <!-- Marks -->
            <div class="mt-3">
                <label class="form-label fw-bold">Marks <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" value="0" min="1" asp-for="QuestionMarks">
                    <span class="text-danger" asp-validation-for="QuestionMarks"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-outline-success">Save</button>
                    <button type="reset" class="btn btn-outline-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>

            </main>