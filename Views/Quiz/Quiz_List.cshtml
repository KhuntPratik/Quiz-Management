<main id="main" class="main">

    <div class="container mt-4">
        <h4 class="mb-3">Quiz List</h4>

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Quiz</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quiz List</li>
            </ol>
        </nav>

        <!-- Search Filters -->
        <div class="card p-4 mb-4">
            <h5>Search</h5>
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Quiz Name</label>
                    <input type="text" class="form-control" placeholder="Enter quiz name">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Min Question</label>
                    <input type="number" class="form-control" placeholder="Min">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Max Question</label>
                    <input type="number" class="form-control" placeholder="Max">
                </div>
                <div class="col-md-2">
                    <label class="form-label">From Quiz Date</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-2">
                    <label class="form-label">To Quiz Date</label>
                    <input type="date" class="form-control">
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success">Search</button>
                <button class="btn btn-danger">Reset</button>
            </div>
        </div>

        <!-- Quiz List Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Quiz List</h5>
            <a asp-controller="Quiz" asp-action="Add_Quiz" class="btn btn-primary">Add Quiz</a>

        </div>

        <!-- Quiz Table -->
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>QUIZ NAME</th>
                        <th>TOTAL QUESTIONS</th>
                        <th>QUIZ DATE</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>English Grammar Test</td>
                        <td>10</td>
                        <td>10-08-2024</td>
                        <td>
                            <button class="btn btn-sm btn-success">✏ Edit</button>
                            <button class="btn btn-sm btn-danger">❌ Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>General Knowledge Quiz</td>
                        <td>10</td>
                        <td>10-01-2024</td>
                        <td>
                            <button class="btn btn-sm btn-success">✏ Edit</button>
                            <button class="btn btn-sm btn-danger">❌ Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Geography Challenge</td>
                        <td>18</td>
                        <td>22-06-2024</td>
                        <td>
                            <button class="btn btn-sm btn-success">✏ Edit</button>
                            <button class="btn btn-sm btn-danger">❌ Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Math Challenge</td>
                        <td>20</td>
                        <td>20-03-2024</td>
                        <td>
                            <button class="btn btn-sm btn-success">✏ Edit</button>
                            <button class="btn btn-sm btn-danger">❌ Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between mt-3">
            <span>Showing 1 to 10 of 10 entries</span>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled"><a class="page-link">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>

    </div>
</main><!-- End #main -->